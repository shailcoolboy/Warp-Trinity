###########################
#
# Makefile for LibXil Net
#
##########################

COMPILER=
ARCHIVER=
CP=cp
COMPILER_FLAGS=-O2 -c -g
EXTRA_COMPILER_FLAGS = 
LIB=libxil.a
LEVEL=0

RELEASEDIR=../../../lib/
INCLUDEDIR=../../../include/
INCLUDES=-I./include/ -I${INCLUDEDIR}

INCLUDEFILES=./include/net
LIBSOURCES= net/*.c ipv4/*.c api/*.c
OUTS = *.o 

libs:
	for i in $(LIBSOURCES); do \
	  echo "Compiling " $$i ;\
	  $(COMPILER) $(COMPILER_FLAGS) $(EXTRA_COMPILER_FLAGS) $(INCLUDES) $$i; \
        done
	$(ARCHIVER) -r ${RELEASEDIR}/${LIB} ${OUTS} 
	make clean

include: dummy
	${CP} -rf ${INCLUDEFILES} ${INCLUDEDIR}

dummy:
clean:
	rm -rf ${OUTS}

